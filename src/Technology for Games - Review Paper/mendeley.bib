issn = {18737943},
journal = {Journal of Behavior Therapy and Experimental Psychiatry},
keywords = {Adolescents,Cognitive Bias Modification,Motivation,Serious games,Substance use,Training},
pages = {13--20},
pmid = {25843611},
publisher = {Elsevier Ltd},
title = {{Cognitive Bias Modification for adolescents with substance use problems - Can serious games help?}},
url = {http://dx.doi.org/10.1016/j.jbtep.2015.03.008},
volume = {49},
year = {2015}
